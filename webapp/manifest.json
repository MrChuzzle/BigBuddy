{
    "_version": "1.0.0",
    "sap.app": {
        "id": "csg.dev.BigBuddy",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "title": "{{appTitle}}",
        "description": "{{appDescription}}",
        "dataSources": {
            "mainService": {
                "uri": "/sap/opu/odata/sap/undefined/",
                "type": "OData",
                "settings": {
                    "odataVersion": "2.0"
                }
            },
            "config": {
                "uri": "models/config.json",
                "type": "JSON"
            }
        }
    },

    "sap.ui": {
        "technology": "UI5",
        "deviceTypes": {
            "desktop": true,
            "tablet": true,
            "phone": true
        },
        "supportedThemes": [
            "sap_hcb",
            "sap_belize"
        ]
    },

    "sap.ui5": {
        "rootView": {
            "viewName": "csg.dev.BigBuddy.view.App",
            "type": "XML",
            "async": true,
            "id": "app"
        },
        "dependencies": {
            "minUI5Version": "1.71.14",
            "libs": {
                "sap.ui.core": {
                    "minVersion": "1.71.14",
                    "lazy": false
                },
                "sap.m": {
                    "minVersion": "1.71.14",
                    "lazy": false
                },
                "sap.ui.layout": {
                    "minVersion": "1.71.14",
                    "lazy": false
                }
            }
        },
        "contentDensities": {
            "compact": true,
            "cozy": true
        },
        "models": {
            "i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "settings": {
                    "bundleName": "csg.dev.BigBuddy.i18n.i18n"
                }
            },
            "config": {
                "type": "sap.ui.model.json.JSONModel",
                "dataSource": "config"
            },
            "": {
                "type": "sap.ui.model.odata.v2.ODataModel",
                "settings": {
                    "json": true,
                    "useBatch": true,
                    "preload": true,
                    "defaultOperationMode": "Server",
                    "defaultBindingMode": "TwoWay",
                    "defaultCountMode": "Request"
                },
                "dataSource": "mainService",
                "preload": true
            }
        },
        "resources": {
            "css": [{
                "uri": "css/style.css"
            }]
        },
		"routing": {
			"config": {
				"routerClass": "sap.f.routing.Router",
				"viewType": "XML",
				"viewPath": "csg.dev.BigBuddy.view",
				"controlId": "app",
				"controlAggregation": "pages",
				"async": true,
                "bypassed": {
                    "target": [
                        "notFound"
                    ]
                }
			},
			"routes": [
			    {
                    "name": "main",
                    "pattern": ":?query:",
                    "target": [
                        "main"
                    ]
			    },
                {
                    "pattern": "notFound:?query:",
                    "name": "notFound",
                    "target": [
                        "notFound"
                    ]
                }
			],
			"targets": {
				"main": {
					"viewType": "XML",
					"viewLevel": 1,
					"viewName": "Main"
				},
				"notFound": {
                    "viewName": "NotFound",
                    "viewId": "viewNotFound",
                    "viewLevel": 999
                }
			}
		}
	}
}
